<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="30dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:background="@color/dialog_back_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="创建一个新的歌单"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="输入标题"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialog_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/close_black_24dp"
                    android:drawableTint="@color/text_grey_8a"
                    android:insetTop="2dp"
                    android:insetBottom="2dp"
                    android:text="取消"
                    android:textColor="@color/text_grey_8a"
                    android:textSize="18sp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="25dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialog_done_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/icon_done_black_24dp"
                    android:drawableTint="@color/white"
                    android:insetTop="2dp"
                    android:insetBottom="2dp"
                    android:text="确定"
                    android:enabled="false"
                    android:textSize="18sp"
                    app:cornerRadius="25dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>